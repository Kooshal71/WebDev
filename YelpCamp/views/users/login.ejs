<% layout("layout/boilerplate") %>
<h1>Login</h1>
<form action="/login" class="validate-form" novalidate method="post">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input
      type="text"
      id="username"
      name="username"
      class="form-control"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input
      type="password"
      id="password"
      name="password"
      class="form-control"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <button class="btn btn-success">Login</button>
</form>
